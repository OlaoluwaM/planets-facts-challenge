{
  "name": "planet_facts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@xstate/react": "^1.4.0",
    "color": "^3.2.1",
    "framer-motion": "^4.1.17",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "styled-components": "^5.3.0",
    "web-vitals": "^1.1.2",
    "xstate": "^4.22.0"
  },
  "watch": {
    "generateThemeInJS": "./src/context/theme.ts"
  },
  "scripts": {
    "prestart": "npm-run-all lint generateThemeInJS",
    "start": "craco start",
    "prebuild": "npm run generateThemeInJS",
    "build": "craco build",
    "test": "craco test",
    "generateThemeInJS": "tsc --project tsconfig.theme.json && eslint src/context/build/**/*.js --fix",
    "watch:generateThemeInJS": "npm-watch generateThemeInJS",
    "moveThemeBuild": "mv ./src/context/theme.js ./src/context/build/theme.js",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --ext .ts --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/color": "^3.0.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "autoprefixer": "^9.8.6",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.10.0",
    "postcss": "^7.0.36",
    "prettier": "^2.3.2",
    "sass": "^1.35.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.4",
    "typescript": "^4.3.5"
  }
}
